<%- include ../layouts/header.ejs %>

<div class="page-data">
  <div class="container" style="margin-left: 12px; margin-bottom: 10px;">
    <div class="row">
      <a href="/quizzes/add" class="btn btn-default">+ Add</a>
    </div>
  </div>
  <div class="container">
    <table class="table table-striped">
      <tr>
        <th width="50px">Id</th>
        <th>title</th>
        <th>Number of questions</th>
        <th>Modify</th>
      </tr>

      <% if(quizzes.length){

        quizzes.forEach(function(quiz, index) { %>

          <tr>
            <td><%= quiz._id%></td>
            <td><%= quiz.title%></td>
            <td><%= quiz.questions.length %></td>
            <td>
              <a class="a-inside edit" href="../quizzes/edit/<%=quiz._id%>">View/Edit</a>
              <a class="a-inside delete" href="../quizzes/delete/<%=quiz._id%>">Delete</a>
            </td>
          </tr>
          <% });

        }else{ %>
          <tr>
            <td colspan="3">No quizzes added</td>
          </tr>
          <% } %>



        </table>
      </div>
    </div>

    <%- include ../layouts/footer.ejs %>
